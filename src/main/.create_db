/*****************************************/
/*           기업기본정보 생성                */
/*****************************************/
CREATE TABLE HWANG.UNIQUE_CORPCODE (
             CORP_CODE  VARCHAR(8)   UNIQUE NOT NULL
           , STOCK_CODE VARCHAR(6)   PRIMARY KEY
           , CORP_NAME  VARCHAR(100)
           , MODIFY_YMD VARCHAR(8)
           , JURIR_NO   VARCHAR(13)
           , BIZR_NO    VARCHAR(10)
);
COMMENT ON TABLE HWANG.UNIQUE_CORPCODE IS '기업기본정보';
COMMENT ON COLUMN HWANG.UNIQUE_CORPCODE.CORP_CODE IS '기업코드';
COMMENT ON COLUMN HWANG.UNIQUE_CORPCODE.CORP_NAME IS '기업명';
COMMENT ON COLUMN HWANG.UNIQUE_CORPCODE.STOCK_CODE IS '종목코드';
COMMENT ON COLUMN HWANG.UNIQUE_CORPCODE.MODIFY_YMD IS '최종변경일자';
COMMENT ON COLUMN HWANG.UNIQUE_CORPCODE.JURIR_NO IS '법인등록번호';
COMMENT ON COLUMN HWANG.UNIQUE_CORPCODE.BIZR_NO IS '사업자등록번호';

/*****************************************/
/*           기업재무제표 생성                */
/*****************************************/
CREATE TABLE HWANG.UNIQUE_CORPBLANACE(
             STOCK_CODE      VARCHAR(6) PRIMARY KEY
           , THS_INCOME      NUMBER(21)
           , FRM_INCOME      NUMBER(21)
           , BFE_FRM_INCOME  NUMBER(21)
           , THS_ASSETS      NUMBER(21)
           , FRM_ASSETS      NUMBER(21)
           , BFE_FRM_ASSETS  NUMBER(21)
           , THS_DEBT        NUMBER(21)
           , FRM_DEBT        NUMBER(21)
           , BFE_FRM_DEBT    NUMBER(21)
           , THS_TOT_CAP     NUMBER(21)
           , FRM_TOT_CAP     NUMBER(21)
           , BFE_FRM_TOT_CAP NUMBER(21)
);
COMMENT ON TABLE HWANG.UNIQUE_CORPBLANACE IS '기업재무제표';
COMMENT ON COLUMN HWANG.UNIQUE_CORPBLANACE.STOCK_CODE IS '종목코드';
COMMENT ON COLUMN HWANG.UNIQUE_CORPBLANACE.THS_INCOME IS '당기순이익';
COMMENT ON COLUMN HWANG.UNIQUE_CORPBLANACE.FRM_INCOME IS '전기순이익';
COMMENT ON COLUMN HWANG.UNIQUE_CORPBLANACE.BFE_FRM_INCOME IS '전전기순이익';
COMMENT ON COLUMN HWANG.UNIQUE_CORPBLANACE.THS_ASSETS IS '당기자산총계';
COMMENT ON COLUMN HWANG.UNIQUE_CORPBLANACE.FRM_ASSETS IS '전기자산총계';
COMMENT ON COLUMN HWANG.UNIQUE_CORPBLANACE.BFE_FRM_ASSETS IS '전전기자산총계';
COMMENT ON COLUMN HWANG.UNIQUE_CORPBLANACE.THS_DEBT IS '당기부채총계';
COMMENT ON COLUMN HWANG.UNIQUE_CORPBLANACE.FRM_DEBT IS '전기부채총계';
COMMENT ON COLUMN HWANG.UNIQUE_CORPBLANACE.BFE_FRM_DEBT IS '전전기부채총계';
COMMENT ON COLUMN HWANG.UNIQUE_CORPBLANACE.THS_TOT_CAP IS '당기자본총계';
COMMENT ON COLUMN HWANG.UNIQUE_CORPBLANACE.FRM_TOT_CAP IS '전기자본총계';
COMMENT ON COLUMN HWANG.UNIQUE_CORPBLANACE.BFE_FRM_TOT_CAP IS '전전기자본총계';

/*****************************************/
/*           기업주식시세 생성                */
/*****************************************/
CREATE TABLE HWANG.UNIQUE_CORPSTOCK (
             BASE_YMD       VARCHAR(8)
           , STOCK_CODE     VARCHAR(6)
           , CORP_NAME      VARCHAR(100)
           , CLPR           NUMBER(12)
           , VS             NUMBER(8)
           , FLT_RATE       VARCHAR(11)
           , MKP            NUMBER(12)
           , HIPR           NUMBER(12)
           , LOPR           NUMBER(12)
           , TRQU           NUMBER(12)
           , TRPRC          NUMBER(21)
           , LST_GST_CNT    NUMBER(15)
           , MKT_TOT_AMT    NUMBER(21)
);
COMMENT ON TABLE HWANG.UNIQUE_CORPSTOCK IS '기업주식시세';
COMMENT ON COLUMN HWANG.UNIQUE_CORPSTOCK.BASE_YMD IS '기준일자';
COMMENT ON COLUMN HWANG.UNIQUE_CORPSTOCK.STOCK_CODE IS '기업코드';
COMMENT ON COLUMN HWANG.UNIQUE_CORPSTOCK.CORP_NAME IS '기업명';
COMMENT ON COLUMN HWANG.UNIQUE_CORPSTOCK.CLPR IS '종가';
COMMENT ON COLUMN HWANG.UNIQUE_CORPSTOCK.VS IS '전일대비 등락';
COMMENT ON COLUMN HWANG.UNIQUE_CORPSTOCK.FLT_RATE IS '전일대비 등락비율';
COMMENT ON COLUMN HWANG.UNIQUE_CORPSTOCK.MKP IS '시가';
COMMENT ON COLUMN HWANG.UNIQUE_CORPSTOCK.HIPR IS '고가';
COMMENT ON COLUMN HWANG.UNIQUE_CORPSTOCK.LOPR IS '저가';
COMMENT ON COLUMN HWANG.UNIQUE_CORPSTOCK.TRQU IS '거래량';
COMMENT ON COLUMN HWANG.UNIQUE_CORPSTOCK.TRPRC IS '거래대금';
COMMENT ON COLUMN HWANG.UNIQUE_CORPSTOCK.LST_GST_CNT IS '상장주식수';
COMMENT ON COLUMN HWANG.UNIQUE_CORPSTOCK.MKT_TOT_AMT IS '시가총액';
